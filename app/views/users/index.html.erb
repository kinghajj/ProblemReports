<h1>Listing users</h1>

<table>
  <tr>
    <th>Ecs</th>
    <th>User name</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Position</th>
    <th>Main phone</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.ecs_id %></td>
    <td><%= user.user_name %>
        <% if(user == current_user) %>
            (Logged In)
        <% end %>
    </td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.position_id %></td>
    <td><%= user.main_phone %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user, :class => 'button' %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class => 'button' %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class => 'button' %></td>
    <td><%= link_to 'Login', "/users/login/#{user.id}", :method => "POST", :class => 'button' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Sign Out' , "users/logout", {:method => "POST", :class => 'button'} if auth_user? %>
<%= link_to 'New User', new_user_path, :class => 'button' %>
